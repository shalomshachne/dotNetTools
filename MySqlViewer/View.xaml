<Window x:Name="NewView" x:Class="EZX.MySql.Viewer.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View"
        MinWidth="500"
        MinHeight="500"
        Icon="1487947260_BeOS_Query.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="gridData" />
        <StatusBar Grid.Row="1" x:Name="StatusBar" Background="#FFF1EDED">
            <TextBlock x:Name="StatusText">record count =</TextBlock>
        </StatusBar>
    </Grid>
</Window>
